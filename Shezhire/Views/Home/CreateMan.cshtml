@using Shezhire.Controllers;
@*@model HomeController.Nodes*@
@model Shezhire.Models.Node
@{
    ViewBag.Title = "Добавление человека";
}
<form asp-action="createMan" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Birthdate" class="control-label">Дата рождения</label>
        <input type="datetime" asp-for="Birthdate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Parent_id" class="control-label">Родитель</label>
        <select name="Parent_id" asp-for="Parent_id">
            @foreach (var item in ViewBag.Nodes)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        @*<input type="number" asp-for="Parent_id" class="form-control" />*@
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>